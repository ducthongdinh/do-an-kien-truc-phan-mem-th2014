<div class="products">
		<div class="container">
			<div class="agileinfo_single">
				
				<div class="col-md-4 agileinfo_single_left">
					<img id="example" src="images/si1.jpg" alt=" " class="img-responsive">
				</div>
				<div class="col-md-8 agileinfo_single_right">
				<h2><%= @auction.product.name %></h2>
					<div class="w3agile_description">
						<h4>Description :</h4>
						<p><%= @auction.product.description %></p>
					</div>
					<div class="snipcart-item block">
						<div class="snipcart-thumb agileinfo_single_right_snipcart">
							<h4 class="m-sing"><%= @auction.max_price %></h4>
						</div>
						<div class="snipcart-details agileinfo_single_right_details">
							<%= form_with(model: [ @auction, @auction.auction_sessions.build ], local: true) do |form| %>
								<%= form.number_field :auction_id, value: @auction.id, type: "hidden" %>
								<%= form.number_field :price %>
								<%= form.submit "Place bid", class: "button" %>
							<% end %>
						</div>
					</div>
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
	</div>
<!-- // Prodcuct -->

<script type="text/javascript">
  $("#getting-started")
  .countdown("2017/12/23", function(event) {
    $(this).text(
      event.strftime('%D days %H:%M:%S')
    );
  });
</script>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-signin"  }) do |f| %>
  <%= devise_error_messages! %>
  <h3>Resend confirmation instructions</h3>
  
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
    <br />
    <%= f.submit "Resend" ,class: "btn btn-lg btn-primary btn-block" %>
    <%= render "devise/shared/links" %>
    
<% end %>


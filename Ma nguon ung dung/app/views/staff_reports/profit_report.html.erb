<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="https://blackrockdigital.github.io/startbootstrap-sb-admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

<div class="container">
<h1>Profit Report</h1>
<br>
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Choose Profit Report
    </button>
    <ul class="dropdown-menu">
      <li><a href="<%= staff_reports_path %>/profit/all" class="dropdown-item all">All</a></li>
      <li><a href="<%= staff_reports_path %>/profit/service" class="dropdown-item service">Income</a></li>
      <li><a href="<%= staff_reports_path %>/profit/service" class="dropdown-item service">Expense</a></li>
    </ul>
  </div>
  <br>
  <br>
  <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Income Report
        </div>
  </div>
  <table id="income-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Income</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th colspan="2"><center>Total</center></th>
                    <th><%= @total_income %></th>
                </tr>
            </tfoot>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Service</td>
                    <td><%= @service_income %></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Commission</td>
                    <td><%= @commission_income %></td>
                </tr>
                
            </tbody>
        </table>
  <br>
  <br>
  <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Expense Report
        </div>
  </div>
  <table id="expense-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>Expense</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th colspan="2"><center>Total</center></th>
                    <th><%= @total_expense %></th>
                </tr>
            </tfoot>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Salary</td>
                    <td><%= @salary_expense %></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Host</td>
                    <td><%= @host_expense %></td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Advertisement</td>
                    <td><%= @advertisement_expense %></td>
                </tr>
                
            </tbody>
        </table>
  <br>
  <br>
  <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Net Profit Report
        </div>
  </div>
  <table id="net-profit-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Name</th>
                    <th>value</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th colspan="2"><center>Total</center></th>
                    <th><%= @net_profit %></th>
                </tr>
            </tfoot>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Income</td>
                    <td><%= @total_income %></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Expense</td>
                    <td><%= @total_expense %></td>
                </tr>
            </tbody>
        </table>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<script>
	$(document).ready(function() {
    	$('#income-table').DataTable();
    	$('#expense-table').DataTable();
    	$('#net-profit-table').DataTable();
	} );
</script>